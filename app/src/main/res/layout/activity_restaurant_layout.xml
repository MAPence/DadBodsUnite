<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:layoutDescription="@xml/activity_restaurant_layout_scene"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <View
        android:id="@+id/coloredBox1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:background="@color/burntOrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taproomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taproom"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/coloredBox1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/coloredBox1"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Table 1 -->

    <!-- Table 2 -->

    <Button
        android:id="@+id/table1Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Table 1"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="188dp" />

    <Button
        android:id="@+id/table2Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/table1Button"
        android:text="Table 2"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="203dp" />

    <Button
        android:id="@+id/table3Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/table1Button"
        android:text="Table 3"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="315dp" />

    <Button
        android:id="@+id/table4Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/table2Button"
        android:layout_toRightOf="@id/table3Button"
        android:text="Table 4"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="480dp" />

    <Button
        android:id="@+id/table5Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/table3Button"
        android:text="Table 5"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="440dp" />

    <Button
        android:id="@+id/barButton"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_margin="16dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="16dp"
        android:text="Bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coloredBox1" />

    <View
        android:id="@+id/coloredBox2"
        android:layout_width="0dp"
        android:layout_height="103dp"
        android:background="@color/burntOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table1Button"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.motion.widget.MotionLayout>