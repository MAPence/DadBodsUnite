<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <View
        android:id="@+id/topColoredBox"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:background="@color/burntOrange" />

    <TextView
        android:id="@+id/tableNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topColoredBox"
        android:layout_marginTop="-68dp"
        android:layout_centerHorizontal="true"
        android:text="Table 1"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <Button
        android:id="@+id/showOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="Show Order Dialog" />

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tableNumberTextView"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <Button
            android:id="@+id/foodButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/black"
            android:text="Food"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/drinksButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/black"
            android:text="Drinks"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/merchandiseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@color/black"
            android:text="Merchandise"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/giftCardsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="Gift Cards"
            android:textColor="@android:color/white" />



    </LinearLayout>

    <View
        android:id="@+id/bottomColoredBox"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:background="@color/burntOrange" />

</RelativeLayout>